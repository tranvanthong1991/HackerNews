<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dimenStoryDetailCommentMarginLeftItem2"
    android:background="@color/colorBgStoryDetailCommentItem"
    android:orientation="vertical"
    android:padding="@dimen/dimenStoryDetailCommentPaddingItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStoryDetailCommentTextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="null"
            android:textColor="@color/colorStoryDetailCommentTextTime"
            android:textSize="@dimen/dimenStoryDetailCommentTextSizeTime"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtStoryDetailCommentTextAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="null"
            android:textColor="@color/colorStoryDetailCommentTextAuthor"
            android:textSize="@dimen/dimenStoryDetailCommentTextSizeAuthor"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtStoryDetailCommentTextContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimenStoryDetailCommentPaddingTopContent"
        android:text="null"
        android:textColor="@color/colorStoryDetailCommentTextContent"
        android:textSize="@dimen/dimenStoryDetailCommentTextSizeContent2"
        android:textStyle="normal" />

</LinearLayout>