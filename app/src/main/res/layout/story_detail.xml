<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgStoryDetailSession1"
        android:orientation="vertical"
        android:padding="@dimen/dimenStoryDetailPadding">

        <TextView
            android:id="@+id/txtStoryDetailTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="@null"
            android:textColor="@color/colorStoryDetailTextTitle"
            android:textSize="@dimen/dimenStoryDetailTextSizeTitle" />

        <TextView
            android:id="@+id/txtStoryDetailTextLinkWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingTop="@dimen/dimenStoryDetailPaddingTopLinkWeb"
            android:text="@null"
            android:textColor="@color/colorStoryDetailTextLinkWeb"
            android:textSize="@dimen/dimenStoryDetailTextSizeLinkWeb"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStoryDetailTextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@null"
                android:textColor="@color/colorStoryDetailTextTime"
                android:textSize="@dimen/dimenStoryDetailTextSizeTimeAndAuthor"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtStoryDetailTextAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@null"
                android:textColor="@color/colorStoryDetailTextAuthor"
                android:textSize="@dimen/dimenStoryDetailTextSizeTimeAndAuthor"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtStoryDetailTextDescendants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingTop="@dimen/dimenStoryDetailPaddingTopDescendants"
            android:text="@null"
            android:textColor="@color/colorStoryDetailTextDescendants"
            android:textSize="@dimen/dimenStoryDetailTextSizeDescendants" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvStoryDetailComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimenStoryDetailPaddingComment"
        android:background="@color/colorBgStoryDetailSession2"
        android:divider="@null"
        android:dividerHeight="5dp">
    </ListView>

</LinearLayout>